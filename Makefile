###############################################################################
# Makefile
###############################################################################

TEX = $(wildcard *.tex)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PDF)

auto:
	latexmk -f -pdf -pvc

clean:
	latexmk -C

realclean: clean
	$(RM) *.aux *.bbl *.tdo *~

###############################################################################

%.pdf: %.tex $(EPS)
	latexmk -pdf $*

###############################################################################

.NOEXPORT:

###############################################################################

